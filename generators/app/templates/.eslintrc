{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true
  },
  "rules": {
    "key-spacing": 0,
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "max-len": [
      2,
      120,
      2
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "react/forbid-prop-types": 0,
    "comma-dangle": 0,
    "react/jsx-filename-extension": 0,
    "global-require":0,
    "import/no-named-as-default":0,
    "no-param-reassign":0,
    "prefer-const":1,
    "no-unused-expressions": ["error", { "allowShortCircuit": true }],
    "object-shorthand": [2, "consistent"]
  }
}
